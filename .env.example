# Copy this file to .env and fill in your actual values

# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/corporate_agent_db?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Backup Configuration
ENABLE_AUTO_BACKUP=true
TIMEZONE=UTC

# Google Drive Backup Configuration
GOOGLE_DRIVE_BACKUP_FOLDER=Database_Backups
# Google credentials should be in google-credentials.json file in backend root

# WebSocket Configuration
WS_PORT=3002

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100