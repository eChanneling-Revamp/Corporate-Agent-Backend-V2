# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/corporate_agent_db?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# WebSocket Configuration
WS_PORT=3002

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@echannelling.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# Payment Gateway Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External API Configuration
HOSPITAL_API_BASE_URL=https://api.hospital-system.com
HOSPITAL_API_KEY=your-hospital-api-key

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ANALYTICS_API_KEY=your-analytics-key